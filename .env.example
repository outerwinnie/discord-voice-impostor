# Copy this file to .env and fill in values

# Discord bot token
DISCORD_TOKEN=

# Target guild and voice channel
GUILD_ID=
VOICE_CHANNEL_ID=

# Active hours (24h, local server time)
ACTIVE_HOUR_START=16
ACTIVE_HOUR_END=23

# Session timing (minutes)
SESSION_DURATION_MIN=34
SESSION_DURATION_MAX=72
SESSION_DELAY_MIN=75
SESSION_DELAY_MAX=105

# Path to the folder containing audio files.
# Can be absolute (e.g. C:\\path\\to\\sounds) or relative to project root (e.g. sounds)
# If unset, defaults to "sounds"
SOUNDS_PATH=
